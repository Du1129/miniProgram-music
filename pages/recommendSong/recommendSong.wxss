/* pages/recommendSong/recommendSong.wxss */
.head{
	position: relative;
	width: 100%;
	height:500rpx;
	z-index:2;
}
.head image{
	width:50%;
}

.time{
	position:absolute;
	right:60rpx;
	bottom:80rpx;
	color:#fff;
	display:flex;
}
.time view:first-child{
	padding:0;
	font-size:80rpx;
	/* background-color:rgba(255,255,255,.5) */
}
.time view:last-child{
	padding-top:20rpx;
}


.head:after{
    width:180%;
    height:500rpx;
    position: absolute;
	left:-41%;
	top: 0;
    z-index: -1;
	content: '';
	border-radius: 0 0 50% 50%;
	background-color:#fff1f1;

}
.listTitle{
	padding:24rpx 24rpx;
	font-size:36rpx;
	display:flex;
	justify-content: space-between;
	align-items: center;
}
.listTitle .leftContent i{
	font-size:44rpx;
	color:#fe3b3b;
	margin-right:24rpx;
}
.listTitle .rightContent i{
	font-size:50rpx;
}

.songList{
	padding:24rpx;
}
.songListItem{
	height:120rpx;
	box-sizing: border-box;
	padding:15rpx 0;
	/* background-color:yellow; */
	display: flex;
	align-items: center;
}
.pic{
	width:90rpx;
	height:90rpx;
	margin-right:20rpx;
	border-radius: 10rpx;
}
.songInfo{
	flex:1;
	height:100%;
	display:flex;
	flex-direction: column;
	justify-content: space-around;
}

.songAuthor{
	font-size:26rpx;
	display:flex;
	align-items:center;
}
.reason{
	background-color: #FFFCF7;
	color:#F0BC45;
	padding:0 6rpx;
	margin-right:6rpx;
}
.author{
	flex:1;
	color: #b9b9b9;
}
.more{
	width:40rpx;
	height:100%;
	padding-left:10rpx;
	line-height:92rpx;
}
.hiddenFlow{
	overflow: hidden;
    white-space: normal;
    /* text-overflow: -o-ellipsis-lastline; */
    text-overflow:ellipsis;
    display: -webkit-box;
    word-break:break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1; 
}


